<header>


  {% if app.user and app.user.isVerified %}
  <nav>
    <ul>
      <a href="{{ path('app_home') }}">Home</a>
      <a href="{{ path('my_details',{'id':app.user.id}) }}">|My profile</a>
      <a href="{{ path('app_team') }}">|Teams</a>
      <a href="{{ path('app_user') }}">|Players</a>
      <a href="{{ path('app_matches') }}">|Matches</a>
      {% if not app.user.team or is_granted('ROLE_ADMIN') %}
      <a href="{{ path('add_team') }}">|Creat Team</a>
      {% endif %}
      {% if app.user.captain %}
      <a href="{{ path('make_match') }}">|Make Match</a>
      {% endif %}


      <a href="{{ path('app_logout') }}">|Logout</a>

    </ul>
  </nav>

  {% else %}
  {# <a href="{{ path('app_matches') }}">Matches</a> #}
  <a href="{{ path('app_login') }}">Login</a>
  <a href="{{ path('app_register') }}">|Register</a>

  {% endif %}

  <div class="img_logo">
    <a href="{{ path('app_home') }}"><img class="logo" src="{{asset('imgs/Capture d\'écran 2023-05-15 103713.png')}}"
        alt="PLAYAB.COM"></a>
  </div>
</header>

<body>
