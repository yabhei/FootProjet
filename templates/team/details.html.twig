{% extends 'base.html.twig' %}

{% block title %}Hello TeamController!{% endblock %}

{% block body %}


<div id="teamt" style="margin: 3%;">
    <h1>Details of the team :</h1>
<table class="table table-dark table-hover" >
    <thead>
        <th>Name</th>
        <th>Country</th>
        <th>City</th>
    </thead>
    <tbody>
            <tr>
                <td><strong> <a href="{{ path('details_team', {'id' : team.id }) }}" >  {{ team.name }}  </a> </strong> </td>
                <td><strong>  {{ team.country }}  </strong> </td>
                <td><strong> {{ team.city }} </strong> </td>
                {# <td><strong> <a href="" >  {{ team.creationdate }}  </a> </strong> </td> #}
                
                {# <td> <a class="btn btn-danger"  href="{{path('delete_entreprise', {'id' : entreprise.id})}}">  Delete</a></td> #}
            </tr>
    </tbody>

</table >
</div>

{% if team.users |length>0 %}
    
<div style="margin: 3%;">
    <h3>Team players </h3>

        <table class="table table-dark table-hover">
            <tbody> 
                {% for user in team.users %}
                <tr>
                    <td><strong> <a href="{{path('details_user', {'id' : user.id})}}" >  {{ user.firstname }} {{user.lastname}}  </a> </strong></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
{% else %}
<h1 style= "background-color: chartreuse; margin-right: 50%; margin-left: 3%;" >There are no players in this team</h1><br><br>

{% endif %}
</div>

<div id="tusers" style="margin: 3%;">
    <h2>Add Players : </h2>
<table class="table table-dark table-hover">
    <tbody>
    {% for user in users %}

            <tr>
                <td><strong> <a href="{{path('details_user', {'id' : user.id})}}" >  
                    {{ user.firstname}} {{user.lastname}}  </a> </strong> </td>
                <td>
    <a class="btn btn-success" href="{{path('add_usertoteam', {'id_team':team.id, 'id_user':user.id})}}">Add</a>
                </td>
            </tr>
            </tr>
    {% endfor %}
    </tbody>
</table>
</div>        
   

{% endblock %}