{% extends 'base.html.twig' %}

{% block title %}
<script src="{{ asset('js/search.js') }}"></script>
Hello PlayerController!
{% endblock %}

{% block body %}
<div id="list_table">
    <div style="display: inline-block;">
        <h1 style="display: inline-block;" class="list-players">List of players</h1>
    </div>

    <div class="search">

        <a href="{{ path('search_user') }}" class="btn btn-primary" style="background-color: rgb(213, 80, 32);">Search
            By Position</a>

    </div>
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Team</th>
                <th>Position</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}


            <tr>
                <td><strong> <a href="{{path('details_user', {'id' : user.id})}}"> {{ user.firstname}} {{user.lastname
                            }}
                        </a> </strong> </td>
                {% if user.team %}

                <td> <a href="{{ path('details_team', {'id' : user.team.id }) }}"> {{ user.team }} </a> </td>
                {% else %}
                <td>

                    {{ "-" }}
                </td>
                {% endif %}
                <td><strong> {{ user.position}}
                    </strong> </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}