{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm, {'attr': {'class': 'my-form'}}) }}
    {{ form_row(registrationForm.firstname) }}
    {{ form_row(registrationForm.lastname) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        <p class="form-text text-muted">{{ form_help(registrationForm.plainPassword) }}</p>
        {{ form_row(registrationForm.birthday) }}
        {{ form_row(registrationForm.city) }}
        {{ form_row(registrationForm.position) }}
        {{ form_row(registrationForm.rating) }}
        {{ form_row(registrationForm.nTel) }}
        {{ form_row(registrationForm.agreeTerms) }}
        <button type="submit" class="btn btn-primary">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
